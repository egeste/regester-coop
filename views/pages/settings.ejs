<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('../partials/head', { pkg }); %>
  </head>

  <body>
    <header class="fixed-top">
      <%- include('../partials/header', { pkg }); %>
    </header>

    <main class="container">
      <div class="card">
        <div class="card-body">
          <form>
            <div class="form-group row">
              <div class="col">
                <label class="form-label">Server Port</small></label>
                <input type="number" min="1024" max="65535" class="form-control" value="<%=config.port%>" />
              </div>

              <div class="col">
                <label class="form-label">Timezone</small></label>
                <input type="text" class="form-control" value="<%=config.timezone%>" />
              </div>

              <div class="col">
                <label class="form-label">Latitude</small></label>
                <input type="number" min="-90" max="90" class="form-control" value="<%=config.latitude%>" />
              </div>

              <div class="col">
                <label class="form-label">Longitude</small></label>
                <input type="number" min="-180" max="180" class="form-control" value="<%=config.longitude%>" />
              </div>
            </div>

            <div class="form-group row">
              <div class="col">
                <label class="form-label">Motor Speed</small></label>
                <input type="number" min="1" max="10" class="form-control" value="<%=config.rpm%>" />
              </div>

              <div class="col">
                <label class="form-label">Timezone</small></label>
                <input type="text" class="form-control" value="<%=config.timezone%>" />
              </div>

              <div class="col">
                <label class="form-label">Latitude</small></label>
                <input type="number" min="-90" max="90" class="form-control" value="<%=config.latitude%>" />
              </div>

              <div class="col">
                <label class="form-label">Longitude</small></label>
                <input type="number" min="-180" max="180" class="form-control" value="<%=config.longitude%>" />
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>

    <footer class="container fixed-bottom">
      <%- include('../partials/footer', { pkg }); %>
    </footer>
  </body>
</html>
